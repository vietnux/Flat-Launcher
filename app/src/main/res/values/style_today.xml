<resources>
    <style name="FatLauncher.Title" parent="FatLauncher">
        <item name="android:layout_height">@dimen/today_title_container_height</item>
        <item name="android:gravity">start|bottom</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingHorizontal">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">42sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FatLauncher.Today.ItemCard" parent="FatLauncher">
        <item name="cardCornerRadius">@dimen/today_card_radius</item>

        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>
</resources>