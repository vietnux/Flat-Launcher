<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FatLauncher.Notification.Item.Container" parent="FatLauncher">
        <item name="cardCornerRadius">@dimen/item_card_radius</item>
        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>
    <style name="FatLauncher.Notification.Item.Title" parent="FatLauncher">
        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="FatLauncher.Notification.Item.Text" parent="FatLauncher">
        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="FatLauncher.Notification.Item.Icon" parent="FatLauncher">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>
</resources>