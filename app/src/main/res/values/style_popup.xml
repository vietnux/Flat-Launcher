<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FatLauncher.ListPopup.Container" parent="FatLauncher">
        <item name="cardCornerRadius">@dimen/item_card_radius</item>

        <item name="android:layout_margin">@dimen/item_card_margin</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>

    <style name="FatLauncher.ListPopup.Recycler" parent="FatLauncher">
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="FatLauncher.ListPopup.Item.Container" parent="FatLauncher">
        <item name="android:minHeight">50dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="FatLauncher.ListPopup.Item.Icon" parent="FatLauncher">
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">-8dp</item>
    </style>

    <style name="FatLauncher.ListPopup.Item.Label" parent="FatLauncher">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FatLauncher.ListPopup.Item.Description" parent="FatLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FatLauncher.ListPopup.Item.Switch" parent="FatLauncher">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="FatLauncher.ListPopup.Item.MultiSwitch" parent="FatLauncher">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="FatLauncher.ListPopup.Title.Separator" parent="FatLauncher">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="FatLauncher.ListPopup.Title.Label" parent="FatLauncher">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FatLauncher.ListPopup.Title.Description" parent="FatLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="FatLauncher.ItemPopup.Container" parent="FatLauncher">
        <item name="cardCornerRadius">@dimen/item_card_radius</item>
        <item name="android:elevation">@dimen/item_card_elevation</item>
    </style>

    <style name="FatLauncher.ItemPopup.Shortcut.Icon" parent="FatLauncher">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="FatLauncher.ItemPopup.Shortcut.Label" parent="FatLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>