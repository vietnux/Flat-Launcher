<resources>
    <style name="FatLauncher.MediaPlayer.Card" parent="FatLauncher.Today.ItemCard"/>

    <style name="FatLauncher.MediaPlayer.Container" parent="FatLauncher">
        <item name="android:padding">@dimen/feed_card_padding</item>
    </style>

    <style name="FatLauncher.MediaPlayer.Title" parent="FatLauncher">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/feed_card_text_dark_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/feed_card_spacing</item>
    </style>

    <style name="FatLauncher.MediaPlayer.Subtitle" parent="FatLauncher">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/feed_card_text_dark_description</item>
        <item name="android:paddingHorizontal">@dimen/feed_card_spacing</item>
        <item name="android:paddingTop">@dimen/feed_card_spacing</item>
    </style>
</resources>