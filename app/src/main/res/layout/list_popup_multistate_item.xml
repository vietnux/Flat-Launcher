<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    style="@style/FatLauncher.ListPopup.Item.Container">
    <ImageView
        style="@style/FatLauncher.ListPopup.Item.Icon"
        android:id="@+id/icon"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:paddingVertical="4dp">
        <TextView
            style="@style/FatLauncher.ListPopup.Item.Label"
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            style="@style/FatLauncher.ListPopup.Item.Description"
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <net.tglt.android.fatlauncher.util.view.multiswitch.MultiSwitch
        style="@style/FatLauncher.ListPopup.Item.MultiSwitch"
        android:id="@+id/toggle"
        android:layout_width="wrap_content"
        android:layout_height="24dp"/>
</LinearLayout>