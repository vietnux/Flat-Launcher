<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    style="@style/FatLauncher.SearchResult.Container">
    <ImageView
        style="@style/FatLauncher.SearchResult.Simple.Icon"
        android:id="@+id/icon"/>
    <TextView
        style="@style/FatLauncher.SearchResult.Simple.Title"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>