<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_container">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/at_a_glace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top">
            <TextClock
                android:id="@+id/date"
                style="@style/FatLauncher.Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:format24Hour="d MMMM, cccc"
                android:format12Hour="d MMMM, cccc"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/suggestions_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pinned_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:background="@drawable/tile_drop_area"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>